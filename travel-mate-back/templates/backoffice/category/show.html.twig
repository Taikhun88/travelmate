{% extends 'base.html.twig' %}

{% block title %}
	Détails de nos catégories - Backoffice Travel Mate
{% endblock %}

{% block body %}

	<div class="container table-responsive">
		<h1>Détails de la catégorie</h1>
		<div class="action-list">
		<div class="edit-delete-group">
		<button type="button" class="btn btn-outline-primary mb-4">
			<a href="{{ path('backoffice_category_edit', {'id': categories.id}) }} ">Modifier</a>
		</button>
		{{ include('backoffice/category/_delete_form.html.twig') }}
	</div>
		<button type="button" class="btn btn-outline-secondary mb-4">
			<a href="{{ path('backoffice_category_index') }}">Retour à la liste des catégories</a>
		</button>
	</div>
	<table class="table table-striped table-bordered align-middle">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ categories.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ categories.name }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>
					<img src="{{ categories.image }}" alt="image {{ categories.name }}">
				</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
