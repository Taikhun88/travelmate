{% extends 'base.html.twig' %}

{% block title %}
	Catégories d'événement - Backoffice Travel Mate
{% endblock %}

{% block body %}

<div class="container table-responsive">
	<h1>Liste des catégories</h1>

	<button type="button" class="btn btn-outline-secondary mb-4">
		<a class="text-decoration-none" href="{{ path('backoffice_category_new') }}">Ajouter une catégorie</a>
	</button>

	<table class="table table-striped table-bordered align-middle">
		<thead>
			<tr>
				<th>Id</th>
				<th>Catégorie</th>
				<th>Image associée</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		{# <a href="{{ path('backoffice_category_new') }}">Créer une catégorie</a> #}
			{% for category in categories %}
				<tr>
					<td>{{ category.id }}</td>
					<td>{{ category.name }}</td>
					<td>
						<img src="{{ category.image }}" alt="image {{ category.name }}">
					<td>
						<button type="button" class="btn btn-outline-info">
							<a href="{{ path('backoffice_category_show', {'id': category.id}) }}">Voir</a>
						</button>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
